@using E_comerce.Data;
@using E_comerce.Models.ViewModels;
@model HomeVM



<a href="https://www.amazon.com/-/es/">

    <img alt="" src="https://m.media-amazon.com/images/I/61UQQeoWdvL._SX3000_.jpg" width="1300" height="270" />

</a>





<div class="text-center">
    <h1 class="display-4">MarketPlace</h1>
   
</div>



<div class="container">


    <div class="row">

        
        @foreach (var item in Model.cursos)
        {

           <div class="card" style="width: 18rem;">
                <img src="@RUTAIMAGEN.RutaImagen@item.ImagenUrl" class="card-img-top" alt="...">
                
                <div class="card-body">
                    <h5 class="card-title">@item.NombreProducto</h5>
                    <span>Precio: $@item.Precio </span>
                    <p class="card-text">@item.Categoria.NombreCategoria</p>
                    <p>@item.DescripcionCorta</p>
                    <a href="#" class="btn btn-primary">Comprar</a>
                    <a class="btn btn-warning" asp-controller="Producto">Leer más</a>
                </div>
            </div>



          


        }


    </div>



</div>
